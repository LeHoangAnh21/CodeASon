<div class="mt-4">
	<form method="POST" action="/shoes/{{shoe._id}}?_method=PUT" enctype="multipart/form-data">

		<div class="form-group">
			<label for="name" class="">Name</label>
			<input type="text" class="form-control" id="name" value="{{shoe.name}}" name="name" placeholder="name">
		</div>
		<br>
		<div class="form-group">
			<label for="description" class="">Description</label>
			<input type="text" class="form-control" id="description" value="{{shoe.description}}" name="description" placeholder="description">
		</div>
		<br>
		<div class="form-group">
			<label for="price" class="">Price</label>
			<input type="number" class="form-control" id="price" value="{{shoe.price}}" name="price" placeholder="price">
		</div>
		<br>
		<div class="form-group">
			<label for="image" class="">Image</label>
			<input type="file" class="form-control" id="image" value="{{shoe.image}}" name="image" placeholder="image">
		</div>
		<br>

		<button type="submit" class="btn btn-primary">UPDATE</button>

	</form>

</div>